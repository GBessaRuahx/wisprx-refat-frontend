NODE_ENV=production

# URLs públicas
BACKEND_URL=https://api.example.com
FRONTEND_URL=https://app.example.com

# Portas internas
PORT=4000
PROXY_PORT=443

# Banco de Dados (PostgreSQL)
DB_DIALECT=postgres
DB_HOST=your_db_host
DB_PORT=5432
DB_USER=your_db_user
DB_PASS=your_db_password
DB_NAME=your_db_name

# Autenticação JWT
JWT_SECRET=your_jwt_secret
JWT_REFRESH_SECRET=your_jwt_refresh_secret

# Redis
REDIS_URI=redis://:your_redis_password@your_redis_host:6379
REDIS_OPT_LIMITER_MAX=1
REDIS_OPT_LIMITER_DURATION=3000

# Variáveis adicionais do Redis
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Limites
USER_LIMIT=999
CONNECTIONS_LIMIT=999
CLOSED_SEND_BY_ME=true

# Integração Gerencianet (preencher real se for usar)
GERENCIANET_SANDBOX=false
GERENCIANET_CLIENT_ID=your_client_id
GERENCIANET_CLIENT_SECRET=your_client_secret
GERENCIANET_PIX_CERT=your_pix_cert
GERENCIANET_PIX_KEY=your_pix_key

# E-mail (ajustar conforme produção)
MAIL_HOST=smtp.example.com
MAIL_USER=example@domain.com
MAIL_PASS=your_password_here
MAIL_FROM=example@domain.com
MAIL_PORT=465

# MinIO
MINIO_ENDPOINT=http://minio:9000
MINIO_USE_SSL=false
MINIO_PORT=9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET=your_minio_bucket
MINIO_REGION=your_minio_region

# Sentry (monitoramento de erros)
SENTRY_AUTH_TOKEN=your_sentry_token
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
